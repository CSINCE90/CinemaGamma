@model CinemaFrontend.DTO.TransactionDTO

<h2>Conferma il tuo acquisto</h2>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Dettagli della prenotazione</h5>
        <p><strong>ID Prenotazione:</strong> @Model.ReservationId</p>
        <p><strong>Importo totale:</strong> €@Model.Amount</p>
    </div>
</div>

<form asp-action="Purchase" method="post">
    @Html.HiddenFor(m => m.ReservationId)
    @Html.HiddenFor(m => m.Amount)

    <div class="form-group mb-3">
        <label asp-for="PaymentMethod">Metodo di Pagamento</label>
        <select asp-for="PaymentMethod" class="form-select">
            <option value="CreditCard">Carta di Credito</option>
            <option value="PayPal">PayPal</option>
            <option value="BankTransfer">Bonifico Bancario</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Conferma Acquisto</button>
</form>