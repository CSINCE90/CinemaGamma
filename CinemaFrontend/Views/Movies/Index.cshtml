@model IEnumerable<CinemaFrontend.DTO.MovieDTO>
@{
    ViewData["Title"] = "Movies";
}

<div class="container">
    <h1 class="my-4">Movies</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="form-inline">
                <div class="input-group w-100">
                    <input type="text" name="searchString" class="form-control" placeholder="Search for movies..." value="@ViewData["CurrentFilter"]">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 300px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Genre</p>
                        <p class="card-text"><small class="text-muted">Release Date: @item.ReleaseDate.ToShortDateString()</small></p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>